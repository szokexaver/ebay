<%= simple_form_for @item, :html => { :multipart => true } do |f| %>
    <%= f.input :name, label: "Megnevezés" %>
    <%= f.association :categories, label: "Válassz kategóriát", as: :check_boxes %>
    <%= f.file_field :item_img, label: "Kép" %>
    <%= f.input :description, label: "Leírás" %>
    <%= f.submit 'Létrehoz', class: "btn btn-primary" %>
<% end %>