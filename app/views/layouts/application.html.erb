<!DOCTYPE html>
<html>
  <head>
    <title>Ebay</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-light ">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to "Kezdőlap", root_path, class: "navbar-brand" %>
      </div>
      <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li><%= link_to "Új tárgy", new_item_path %></li>
            <li><%= link_to "Kijelentkezés", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "Regisztráció", new_user_registration_path %><li>
          <li><%= link_to "Bejelentkezés", new_user_session_path %></li>
          <% end %>
      </ul>
    </div>
  </nav>
<div class="container-fluid">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
</div>


    <%= yield %>
  </body>
</html>
